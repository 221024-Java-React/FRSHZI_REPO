package Controller;

import com.fasterxml.jackson.databind.ObjectMapper;

import DAO.IAuthDAO;
import DAO.ITicketDAO;
import Model.Person;
import Service.AuthService;
import Service.AuthServiceFactory;
import Service.TicketService;
import Service.TicketServiceFactory;
import io.javalin.http.Handler;

public class TicketController {
	
	ITicketDAO iTicketDAO;
	private ObjectMapper objectMapper;
	private TicketService tickerService;
	
	
        public TicketController(ITicketDAO iTicketDAO) {
		super();
		this.objectMapper = new ObjectMapper();
		this.iTicketDAO = iTicketDAO;
		tickerService = AuthServiceFactory.createAuthService(iTicketDAO);
	}
	
	
ITicketDAO iTicketDAO;

TicketService tickerServise = TicketServiceFactory.createTicketService(iTicketDAO);


public Handler handleSubmitTicket = (context) -> {
	
	Person person = objectMapper.readValue(context.body(), Person.class);
	System.out.println(person);
	authService.Register(person);
	context.status(201);
	context.result(objectMapper.writeValueAsString(person));
};
}
