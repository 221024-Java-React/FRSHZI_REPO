package Lab8;

public class Lab9 {

	
	public int[] calculateBonuses(char[] toConvert) {
		int i =0;
		int[] bonuses = null;
		do
		{
			switch(toConvert[i])
			{
			case 'A': bonuses[i]=5000;break;
			case 'B': bonuses[i]=2500;break;
			case 'C': bonuses[i]=1000;break;
			case 'D': bonuses[i]=500;break;
			case 'F': bonuses[i]=0;break;
			default: ;break;
			}
			i++;
		}while(i<toConvert.length);
		
		return bonuses;
	}
}
